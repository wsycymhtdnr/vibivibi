<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--colorPrimary对应ActionBar的颜色-->
        <item name="colorPrimary">@android:color/white</item>
        <!--colorPrimaryDark对应状态栏的颜色-->
        <item name="colorPrimaryDark">@android:color/white</item>
        <!--colorAccent 对应EditText编辑时、RadioButton选中、CheckBox等选中时的颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--ActionBarDrawerToggle设置颜色 -->
        <!--<item name="colorControlNormal">@android:color/white</item>-->
        <!-- 底部导航栏的颜色 -->
        <!--<item name="android:navigationBarColor" tools:targetApi="lollipop">@color/navigationBarColor</item>-->
        <!--<item name="android:windowBackground">@color/windowBackground</item>-->
    </style>
    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/launch_splash</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16dp</item>
    </style>
</resources>